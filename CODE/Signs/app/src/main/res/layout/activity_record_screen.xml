<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".record_screen">


 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:onClick="Startrecord"
     android:text="SIGN"
     android:textSize="25dp"
      android:id="@+id/sign_text"
     ></TextView>
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:onClick="Startrecord"
     android:id="@+id/satrrecord"
     android:text="START RECORD" ></Button>

 <VideoView
     android:layout_width="match_parent"
     android:layout_height="250dp"
     android:onClick="Playrecord"
     android:id="@+id/viewrecordvideo"></VideoView>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/playbutton"
    android:onClick="Playrecord"
    android:text="PLAy RECORD"></Button>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="UPLOAD"
    android:onClick="upload"
    android:id="@+id/upload_button"></Button>
</LinearLayout>